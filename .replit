run = "npm run dev"
hidden = [".build", ".config"]

[nix]
channel = "stable-23_11"

[env]
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_global/bin:/home/runner/$REPL_SLUG/node_modules/.bin"
XDG_CONFIG_HOME = "/home/runner/.config"
npm_config_prefix = "/home/runner/$REPL_SLUG/.config/npm/node_global"
NODE_VERSION = "18"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[deployment]
build = ["sh", "-c", "npm install --legacy-peer-deps && NODE_OPTIONS='--max-old-space-size=4096' npm run build"]
run = ["npm", "run", "start"]
deploymentTarget = "cloudrun"
ignorePorts = false
